@model ClothesEcommerce.Models.User

@{
    ViewBag.Title = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Add any other necessary stylesheets here -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.19.0/font/bootstrap-icons.css">
    <style>
        body {
            padding-top: 56px; /* Adjust this value based on your header height */
        }

        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Sidebar background color */
            padding-top: 20px;
            color: #fff;
            transition: all 0.3s;
        }
      
            .sidebar h5 {
                text-align: center;
                margin-bottom: 20px;
            }

            .sidebar a {
                padding: 15px;
                text-decoration: none;
                font-size: 16px;
                color: #ced4da; /* Sidebar text color */
                display: block;
                transition: color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #495057; /* Sidebar background color on hover */
                    color: #ffffff; /* Sidebar text color on hover */
                }
        .nav-item.active a {
            background-color: #495057; /* Background color for the active link */
            color: #ffffff; /* Text color for the active link */
        }

        .content {
            margin-left: 250px; /* Adjust this value based on your sidebar width */
            padding: 20px;
            transition: margin-left 0.3s;
        }
    </style>
</head>
<body>

    <div class="container-fluid">
       
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar">
                
                <div class="sidebar-sticky">
                    <div class="d-flex justify-content-between align-items-center mb-3">

                        <a href="@Url.Action( "Index", "Clothes", new { @class = "text-decoration-none" })" style="padding: 0px;margin:0px">
                            <img src="~/Icons/icons8-flèche-gauche-50.png" alt="Alternate Text" />
                        </a>
                    </div>
                    <ul class="nav flex-column">
                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "UpdateProfile" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("UpdateProfile")">Edit Profile</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "ChangePassword" ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("ChangePassword")">Change Password</a>
                        </li>
                        
                    </ul>
                </div>
            </nav>


            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 content">
                <h2>@RenderBody()</h2>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Add any other necessary scripts here -->

</body>
</html>